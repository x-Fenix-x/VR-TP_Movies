<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', {title: 'Listado de Peliculas' }) %>

    <body>
        <%- include('partials/header') %>
            <!-- <h1 class="titulo">LISTADO DE PEL√çCULAS</h1> -->

            <div class="card">
                <div class="card-header">
                    <nav class="d-flex justify-content-between" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Pel√≠culas</li>
                        </ol>
                        <a href="/movies/add" class="btn btn-dark btn-sm">Agregar pel√≠cula</a>
                    </nav>
                </div>

                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="table-dark" scope="col">#</th>
                                <th class="table-dark" scope="col">T√≠tulo</th>
                                <th class="table-dark d-none d-md-table-cell" scope="col">Rating</th>
                                <th class="table-dark d-none d-md-table-cell" scope="col">Premios</th>
                                <th class="table-dark d-none d-md-table-cell" scope="col">G√©nero</th>
                                <th class="table-dark" scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% movies.forEach(({id, title, rating, awards, genre, length, release_date}, index)=> { %>
                                <tr>
                                    <th scope="row">
                                        <%= index + 1 %>
                                    </th>
                                    <td>
                                        <a href="/movies/detail/<%= id %>">
                                            <%= title %>
                                        </a>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <%= rating %>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <%= awards %>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <%= genre?.name || "Sin clasificar" %>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <!-- Button trigger modal detail movie -->
                                            <button type="button" class="btn btn-sm btn-outline-dark"
                                                data-bs-toggle="modal" data-bs-target="#detailMovie<%=id%>">
                                                <i class="fas fa-eye"></i>
                                            </button>

                                            <div class="modal fade" id="detailMovie<%=id%>" tabindex="-1"
                                                aria-labelledby="detailMovie<%=id%>Label" aria-hidden="true">
                                                <div class="modal-dialog modal-lg  modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="detailMovie<%=id%>Label">
                                                                Detalles de la pel√≠cula üé¨
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="card mb-3">
                                                                <div class="row g-0">
                                                                    <div class="col-md-6">
                                                                        <div class="card-body">
                                                                            <h5 class="card-title">T√≠tulo:
                                                                                <%=title%>
                                                                            </h5>
                                                                            <h5 class="card-title">
                                                                                Rating: <%=rating%>
                                                                            </h5>
                                                                            <h5 class="card-title">
                                                                                Premios: <%=awards%>
                                                                            </h5>
                                                                            <h5 class="card-title">
                                                                                Duraci√≥n:
                                                                                <%= (length != null) ? (length + " min") : "Sin datos" %>
                                                                            </h5>
                                                                            <h5 class="card-title">
                                                                                G√©nero:
                                                                                <%= genre?.name || "Sin clasificar" %>
                                                                            </h5>
                                                                            <h5 class="card-title">
                                                                                Fecha de estreno: <%=release_date%>
                                                                            </h5>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Cerrar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <a class="btn btn-sm btn-outline-dark" href="/movies/edit/<%= id %>"><i
                                                    class="fas fa-edit"></i></a>

                                            <!-- Button trigger modal delete -->
                                            <button type="button" class="btn btn-sm btn-outline-dark"
                                                data-bs-toggle="modal" data-bs-target="#removeMovie<%= id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>

                                            <!-- Modal -->
                                            <div class="modal fade" id="removeMovie<%= id %>" tabindex="-1"
                                                aria-labelledby="removeMovie<%= id %>Label" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="removeMovie<%= id %>Label">
                                                                ADVERTENCIA!</h1>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Esta a punto de eliminar: <b>
                                                                    <%= title %>.
                                                                </b> ¬øDesea continuar?</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Cancelar</button>
                                                            <form action="/movies/remove/<%= id %>?_method=DELETE"
                                                                method="POST">
                                                                <button type="submit"
                                                                    class="btn btn-danger">Eliminar</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
    </body>

</html>